@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    // получаем сервис IRequestCultureFeature
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    // получаем список поддерживаемых культур
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName })
        .ToList();
}

<form asp-area="Requester" asp-controller="Home" asp-action="SetLanguage"
      asp-route-returnUrl="@Context.Request.Path"
      method="post" class="form-horizontal">
    <div class="btn-toolbar " role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group pt-1" role="group" aria-label="First group1">
           
        </div>
        <div class="btn-group " role="group" aria-label="First group">
            <button name="culture" type="submit" value="uz" class="btn btn-light">
                <img src="~/image/uz.png" style="width:35px; height:20px;" />
            </button>
        </div>
        <div class="btn-group" role="group" aria-label="Second group">
            <button name="culture" value="ru" type="submit" class="btn btn-light">
                <img src="~/image/Flag_of_Russia.png" style="width:35px; height:20px;" />
            </button>
        </div>

    </div>

    
</form>