<script>
    jQuery(document).ready(function ($) {
        $('#app').change(function () {
            // hide all optional elements

            $('#manager').hide();
            $("#role").each(function () {
                if ($('#role option:selected').text() == "Employee") {
                    $('#manager').slideDown();

                } else
                    $('#manager').filter(':hidden');

            });
        });

    });
</script>
<script type="text/javascript">
    $(function () {
        $('#department').chosen();
    });

</script>