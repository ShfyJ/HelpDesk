    <!--  wave JS
        ============================================ -->
    <script src="~/register/js/wave/waves.min.js"></script>
    <script src="~/register/js/wave/wave-active.js"></script>
    <!-- icheck JS
        ============================================ -->
    <script src="~/register/js/icheck/icheck.min.js"></script>
    <script src="~/register/js/icheck/icheck-active.js"></script>
    <!--  todo JS
