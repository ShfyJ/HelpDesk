        <![endif]-->
    <!-- Login Register area Start-->

    <div class="login-content" id="logreg-forms">
        <!-- Register -->
       

        <div class="nk-block toggled" id="l-register">
            <div id="msgSuccess" style="display:none">
                <div class="alert alert-success">
                    <span class="glyphicon glyphicon-ok"></span><strong>Рўйхатдан ўтиш  муваффақиятли ўтди</strong>
                </div>
            </div>
            <div id="msgError" style="display:none">
                <div class="alert alert-danger">
                    <span class="glyphicon glyphicon-remove"></span><strong>Рўйхатдан ўтиш амалга ошмади</strong>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Message1))
            {
                @*<div class="col-sm-8">
                <div class="alert alert-warning">
                    @Model.Message1
                </div>
            </div>*@
                
                    <div class="alert alert-danger">
                        <span class="glyphicon glyphicon-remove"></span><strong style="color:darkred"> @Model.Message1</strong>
                    </div>
                
            }
