    <script src="~/register/js/login/login-action.js"></script>
    <!-- plugins JS
        ============================================ -->
    <script src="~/register/js/plugins.js"></script>
    <!-- main JS
        ============================================ -->
    <script src="~/register/js/main.js"></script>
