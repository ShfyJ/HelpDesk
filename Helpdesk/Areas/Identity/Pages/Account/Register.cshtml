                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-phone "></i></span>

                        <span class="input-group-addon nk-ic-st-pro"> +998</span>

                        <div class="nk-int-st">
                            <input id="phonenumber" asp-for="Input.PhoneNumber" placeholder="Тел. рақами" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-star"></i></span>
                        <div class="form-group">
                            <div class="bootstrap-select fm-cmp-mg">


                                <select asp-for="Input.Department" class="form-control selectpicker" id="department" onfocus='this.size=5;' onblur='this.size=1;'
                                        onchange='this.size=1; this.blur();'>
                                    <option selected disabled>Департамент ёки болимингизни танланг</option>
                                    <option>Тижорат департаменти</option>
                                    <option>Бошъқарув аппарати билан ишлаш департаменти</option>
                                    <option>Персонални бошқариш департаменти</option>
                                    <option>Юридик департаменти</option>
                                    <option>Трансформация ва операцион самарадорлик департаменти</option>
                                    <option>Молиявий ва комплаенс назорати департаменти</option>
                                    <option>Матбуот хизмати</option>
                                    <option>Биринчи бўлим</option>
                                    <option>Объектларни ҳимоя қилиш ва сафарбарлик ишлари бўлими</option>
                                    <option>Бизнесни истиқболли ривожлантириш департаменти</option>
                                    <option>Инвестицион лойиҳаларни амалга ошириш бўйича департаменти</option>
                                    <option>Марказий ишлаб чиқаришғдиспетчерлик департаменти</option>
                                    <option>Саноат ва экология хавфизлигиб соғлиқни муҳофаза қилиш ва меҳнат хавфсизлиги департаменти</option>
                                    <option>Маҳаллийлаштириш ва кооперация алоқаларини кенгайтириш департаменти</option>
                                    <option>Харидлар департаменти</option>
                                    <option>Геология департаменти</option>
                                    <option>Бурғилаш ишларини мувофиқлаштириш департаменти</option>
                                    <option>Конларни ишлатиш департаменти</option>
                                    <option>Углеводородларни қазиб чиқариш департаменти</option>
                                    <option>Газни қайта ишлаш ва газкимё департаменти</option>
                                    <option>Нефтни қайта ишлаш, нефткимё, нефт маҳсулотларини сақлаш ва транспортировка қилиш департаменти</option>
                                    <option>Ишлаб чиқаришни техник тартибга солиш департаменти</option>
                                    <option>Лойиҳалаштириш департаменти</option>
                                    <option>Капитал курилиш ва таъмирлаш департаменти</option>
                                    <option>Транспорт ва махсус техника департаменти</option>
                                    <option>Объектларни бошқариш ва сервис бўлими</option>
                                    <option>Иқтисод ва режалаштириш департаменти</option>
                                    <option>Корпоратив муносабатлар ва активларни бошқариш департаменти</option>
                                    <option>Бухгалтерия ҳисоби ва корпоратив ҳисобот департаменти</option>
                                    <option>Молия ва ғазначилик операциялари департаменти</option>
                                    <option>Солиққа тортиш бўлими</option>
                                    <option>Халқаро молиявий ҳисобот стандартларини жорий этиш бўлими</option>
                                    <option>Ташкилий ривожлантириш ва персонални рағбатлантириш бўлими</option>
                                    <option>Ахборот-коммуникация технологиялари департаменти</option>
                                    <option>Муборак нефть ва газ қазиб чиқариш бошқармаси</option>
                                    <option>Шўртан нефть ва газ қазиб чиқариш бошқармаси</option>
                                    <option>Устюрт газ қазиб чиқариш бошқармаси</option>
                                    <option>Газли нефть ва газ қазиб чиқариш бошқармаси</option>
                                    <option>Водий нефть ва газ қазиб чиқариш бошқармаси</option>
                                    <option>Муборак газни қайта ишлаш заводи</option>
                                    <option>Бошқаси</option>
                                </select>

                                <span asp-validation-for="Input.Department" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-draft"></i></span>

                        <div class="form-group">
                            <input type="text" asp-for="Input.Position" placeholder="Лавозим" class="form-control" id="position" />

                            <span asp-validation-for="Input.Position" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-house "></i></span>

                        <div class="form-group">

                            <div class="col" id="building">
                                @Html.DropDownListFor(m => m.Input.AddressId, Model.Input.BuildingList ?? new List<SelectListItem>(),
                               "Бинони танланг", new { @class = "form-control" })
                            </div>

                        </div>

                    </div>

                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <div class="input-group mg-t-15">
                            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-checked"></i></span>
                            <div class="nk-int-st">
                                <div class="row form-group">

                                    <div class="form-row py-2">
                                        <div class="dropdown-trig-sgn open" id="role">
                                            <div class="col">
                                                @Html.DropDownListFor(m => m.Input.Role, Model.Input.RoleList ?? new List<SelectListItem>(),
                                               "Ролни танланг", new { @class = "form-control", id = "ddl" })
                                            </div>
                                        </div>
                                        <div class="dropdown-trig-sgn open" id="manager">
                                            <div class="col">
                                                @Html.DropDownListFor(m => m.Input.ManagerId, Model.Input.ManagerList ?? new List<SelectListItem>(),
                                               "Гуруҳ раҳбарини танланг", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }


                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.Password" placeholder="Паролни киритинг" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.ConfirmPassword" placeholder="Паролни қайта киритинг" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" data-ma-block="#l-login" class="btn btn-login btn-success btn-float" data-toggle="tooltip"
                            data-placement="right" title="" data-original-title="Рўйхатдан ўтиш">
                        <i class="notika-icon notika-right-arrow"></i>
                    </button>
                    <br />
                    @*<p>
                    <em>Рўйхатдан ўтиш </em> орқали сиз you agree to our <a href="" target="_blank"> terms of service </a>
                </p>*@

                </div>

                <div class="nk-navigation rg-ic-stl">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-ma-block="#l-login"><i class="notika-icon notika-left-arrow"></i> <span>Ортга</span></a>
                    <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-forget-password"><i>?</i> <span>Паролни унутдим</span></a>

                </div>


                <!-- Forgot Password -->
                <div class="nk-block" id="l-forget-password">
                    <div class="nk-form">
                        <p class="text-left">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla eu risus. Curabitur commodo lorem fringilla enim feugiat commodo sed ac lacus.</p>

                        <div class="input-group">
                            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-mail"></i></span>
                            <div class="nk-int-st">
                                <input type="text" class="form-control" placeholder="Email">
                            </div>
                        </div>

                        <a href="#l-login" data-ma-action="nk-login-switch" data-ma-block="#l-login" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow"></i></a>
                    </div>

                    <div class="nk-navigation nk-lg-ic rg-ic-stl">
                        <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-login"><i class="notika-icon notika-right-arrow"></i> <span>Sign in</span></a>
                        <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-register"><i class="notika-icon notika-plus-symbol"></i> <span>Register</span></a>
                    </div>
                </div>


            </form>
        </div>
    </div>



    <!-- Login Register area End-->
