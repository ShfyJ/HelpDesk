                <div class="nk-form">
                    <div class="input-group">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-support"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.FName" placeholder="First Name" class="form-control" />
                            <span asp-validation-for="Input.FName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-support"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.LName" placeholder="Last Name" class="form-control" />
                            <span asp-validation-for="Input.LName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-mail"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-phone "></i></span>

                        <span class="input-group-addon nk-ic-st-pro"> +998</span>

                        <div class="nk-int-st">
                            <input asp-for="Input.PhoneNumber" placeholder="PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-house "></i></span>
                        <div class="nk-int-st">
                            <div class="row form-group">

                                <div class="form-row py-2">
                                    <div class="dropdown-trig-sgn open">
                                        <div class="col">
                                            @Html.DropDownListFor(m => m.Input.AddressId, Model.Input.BuildingList ?? new List<SelectListItem>(), 
                                           "Please select a building", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="dropdown-trig-sgn open">
                                        <div class="col">
                                            @Html.DropDownListFor(m => m.Input.AddressId, Model.Input.BlockList ?? new List<SelectListItem>(), 
                                           "Please select a block", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <div class="input-group mg-t-15">
                            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-checked"></i></span>
                            <div class="nk-int-st">
                                <div class="row form-group">

                                    <div class="form-row py-2">
                                        <div class="dropdown-trig-sgn open">
                                            <div class="col">
                                                @Html.DropDownListFor(m => m.Input.Role, Model.Input.RoleList ?? new List<SelectListItem>(), 
                                               "Please select a role", new { @class = "form-control", id = "ddl" })
                                            </div>
                                        </div>
                                        <div class="dropdown-trig-sgn open">
                                            <div class="col">
                                                @Html.DropDownListFor(m => m.Input.ManagerId, Model.Input.ManagerList ?? new List<SelectListItem>(), 
                                               "Please select a manager", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    }


                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mg-t-15">
                        <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                        <div class="nk-int-st">
                            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" data-ma-block="#l-login" class="btn btn-login btn-success btn-float" data-toggle="tooltip" 
                            data-placement="right" title="" data-original-title="Register"><i class="notika-icon notika-right-arrow"></i></button>
                    <br />
                    <p>
                        By<em>Registering</em> you agree to our <a href="" target="_blank"> terms of service </a>
                    </p>

                </div>

                <div class="nk-navigation rg-ic-stl">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" data-ma-block="#l-login"><i class="notika-icon notika-right-arrow"></i> <span>Sign in</span></a>
                    <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-forget-password"><i>?</i> <span>Forgot Password</span></a>
                    
                </div>


                <!-- Forgot Password -->
                <div class="nk-block" id="l-forget-password">
                    <div class="nk-form">
                        <p class="text-left">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla eu risus. Curabitur commodo lorem fringilla enim feugiat commodo sed ac lacus.</p>

                        <div class="input-group">
                            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-mail"></i></span>
                            <div class="nk-int-st">
                                <input type="text" class="form-control" placeholder="Email Address">
                            </div>
                        </div>

                        <a href="#l-login" data-ma-action="nk-login-switch" data-ma-block="#l-login" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow"></i></a>
                    </div>

                    <div class="nk-navigation nk-lg-ic rg-ic-stl">
                        <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-login"><i class="notika-icon notika-right-arrow"></i> <span>Sign in</span></a>
                        <a href="" data-ma-action="nk-login-switch" data-ma-block="#l-register"><i class="notika-icon notika-plus-symbol"></i> <span>Register</span></a>
                    </div>
                </div>
                </form>
        </div>
    </div>
   
    <!-- Login Register area End-->
