    ViewData["Title"] = "Index";

    var userId = UserManager.GetUserId(User);
    var flag= _db.Managers.FirstOrDefault(u => u.UserId == userId).Flag;

    int blue = 0;
    int yellow = 0;
    int red = 0;
    int green = 0;
